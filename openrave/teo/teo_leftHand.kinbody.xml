	    <Body name="LeftInternalFingerProximal" type="dynamic">
            <offsetfrom>LeftFrontalWrist</offsetfrom>
            <Translation>-0.02852741 0.02010339 -0.164409358</Translation>
            <RotationAxis>0 0 1 180</RotationAxis>            
            <Geom type="trimesh">
